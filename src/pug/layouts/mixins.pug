mixin accordeonCard(cards)
	each card in cards
		.card
			.card-header(id=""+ card.id)
				
				h5.mb-0
					button.btn.btn-link.collapsed(type="button" data-toggle="collapse" data-target=" #"+card.colId aria-expanded="false" aria-controls=""+card.colId)
						| #{card.title}
						span.arrow
							i.fas.fa-angle-down
			.collapsable.collapse(id=""+card.colId aria-labelledby=""+ card.id data-parent="#timetable")
				.card-body
					+timeTable
