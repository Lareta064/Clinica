mixin table(args)
	.table-block
		.table-row.table-row--head
			.table-cell
				h3 #{args.head1}
			.table-cell
				h3 #{args.head2}
		each item in args.el
			.table-row
				.table-cell
					p #{item.text1}
				.table-cell
					p #{item.text2}

